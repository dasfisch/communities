<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="tests/bootstrap.php"
>
    <testsuites>
        <testsuite name="Community Tests">
            <directory>./tests/</directory>
        </testsuite>
        <testsuite name="WP Node">
        	<directory>./wordpress/wp-content/plugins/wp-node/</directory>
        	<file>./wordpress/wp-content/plugins/wp-node/WP_Node.php</file>
            <file>./wordpress/wp-content/plugins/wp-node/wp_node_controller.php</file>
        </testsuite>
         <testsuite name="Section Fronts">
        	<directory>./wordpress/wp-content/plugins/section-fronts/</directory>
            <file>./wordpress/wp-content/plugins/section-fronts/models/model_template.php</file>
            <file>./wordpress/wp-content/plugins/section-fronts/controllers/controller_templates.php</file>
            <file>./wordpress/wp-content/plugins/section-fronts/config/paths.php</file>
            <file>./wordpress/wp-content/plugins/wp-node/WP_Node.php</file>
            <file>./wordpress/wp-content/plugins/wp-node/wp_node_controller.php</file>

        </testsuite>
    </testsuites>
</phpunit> 